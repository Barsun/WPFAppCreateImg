<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="WPFAppCreateImg.MainWindow"
        Title="Create Dynamic Images" Height="Auto" Width="900" d:DesignHeight="636">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl HorizontalAlignment="Left"
		    Height="Auto"
		    Margin="10,10,0,0"
		    VerticalAlignment="Top"
		    Width="870"
            Grid.Row="0"
		    SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="JackPot">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="149*" />
                        <ColumnDefinition Width="711*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			       Margin="10,10,0,0"
			       TextWrapping="Wrap"
			       VerticalAlignment="Top"
			       Width="0" Height="16"/>
                    <Label Grid.Row="0" Grid.Column="0" Content="Name:" Margin="5"/>
                    <TextBox Name="MyTextBox" Margin="10,10,453,6" Grid.Row="0" Grid.Column="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="JackPot Game:" Margin="5,0,0,0"/>
                    <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="248"
                        Grid.Row="1" Grid.Column="1"/>


                    <Label Grid.Row="2" Grid.Column="0" Content="Currency: " Margin="5,0,0,0"/>
                    <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="248"
                        Grid.Row="2" Grid.Column="1"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Language: " Margin="5,0,0,0"/>
                    <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="248"
                        Grid.Row="3" Grid.Column="1"/>

                </Grid>
            </TabItem>
            <TabItem Header="Drow Date">


                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="149*" />
                        <ColumnDefinition Width="711*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
			    Margin="10,10,0,0"
			    TextWrapping="Wrap"
			    VerticalAlignment="Top"
			    Width="0" Height="16"/>

                    <Label Grid.Row="0" Grid.Column="0" Content="JackPot Game Date: " Margin="5,0,0,0"/>
                    <ComboBox
	                HorizontalAlignment="Left"
	                Margin="10,4,0,0"
	                VerticalAlignment="Top"
	                Width="248"
                    Grid.Row="0" Grid.Column="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Language: " Margin="5,0,0,0"/>
                    <ComboBox
	                HorizontalAlignment="Left"
	                Margin="10,4,0,0"
	                VerticalAlignment="Top"
	                Width="248"
                    Grid.Row="1" Grid.Column="1"/>
                </Grid>


            </TabItem>
        </TabControl>

        <Grid Grid.Row="1" Margin="10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*" />
                <ColumnDefinition Width="132*" />
                <ColumnDefinition Width="47*" />
                <ColumnDefinition Width="194*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Font Family:" Margin="5"/>
            <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="203"
                        Grid.Row="0" Grid.Column="1" Height="22"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Font Style:" Margin="5"/>
            <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="203"
                        Grid.Row="1" Grid.Column="1" Height="22"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Shadow Color Font:" Margin="5"/>
            <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="203"
                        Grid.Row="2" Grid.Column="1" Height="22"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Font Size:" Margin="5"/>
            <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="203"
                        Grid.Row="0" Grid.Column="3" Height="22"/>

            <Label Grid.Row="1" Grid.Column="2" Content="Font Color:" Margin="5"/>
            <ComboBox
	                    HorizontalAlignment="Left"
	                    Margin="10,4,0,0"
	                    VerticalAlignment="Top"
	                    Width="203"
                        Grid.Row="1" Grid.Column="3" Height="22"/>

            <Label Grid.Row="2" Grid.Column="2" Content="Image:" Margin="5"/>
            <TextBox Name="FileNameTextBox" Margin="10,5,112,6" Grid.Row="2" Grid.Column="3"/>
            <Button Content="Browse" Height="25" HorizontalAlignment="Left" Margin="290,4,0,0"
                Name="ButtonImageBrowse" VerticalAlignment="Top" Width="88" Click="button_Click_BrowseImages" Grid.Row="2" Grid.Column="3"/>


            <Label Grid.Row="3" Grid.Column="0" Content="Width:" Margin="5"/>
            <TextBox Name="WidthTextBox" Margin="10,5,138,6" Grid.Row="3" Grid.Column="1" PreviewTextInput="NumberValidationTextBox"/>

            <Label Grid.Row="3" Grid.Column="2" Content="Height:" Margin="5"/>
            <TextBox Name="HeightTextBox" Margin="10,5,211,6" Grid.Row="3" Grid.Column="3" PreviewTextInput="NumberValidationTextBox"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Margin Top:" Margin="5"/>
            <TextBox Name="MarginRightTextBox" Margin="10,5,138,6" Grid.Row="4" Grid.Column="1" PreviewTextInput="NumberValidationTextBox"/>

            <Label Grid.Row="4" Grid.Column="2" Content="Margin Left:" Margin="5"/>
            <TextBox Name="MarginLeftTextBox" Margin="10,5,211,6" Grid.Row="4" Grid.Column="3" PreviewTextInput="NumberValidationTextBox"/>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="0*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox Name="LinkTextBox" Margin="10,5,138,6" Grid.Row="0" Grid.Column="0" IsEnabled="False" />

            <Button Content="Create" Height="25" HorizontalAlignment="Left" Margin="10,0,0,0"
                Name="ButtonCreate" VerticalAlignment="Top" Width="88" Click="button_Click_BrowseImages" Grid.Row="0" Grid.Column="2"/>

            <Button Content="Preview" Height="25" HorizontalAlignment="Left" Margin="125,1,0,0"
                Name="ButtonPreview" VerticalAlignment="Top" Width="88" Click="button_Click_BrowseImages" Grid.Row="0" Grid.Column="2"/>

        </Grid>

    </Grid>


</Window>
